<!doctype html>
<!--[if lt IE 7 ]> <html class="ie ie6" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie ie7" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie ie8" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if IE 9 ]>    <html class="ie ie9" lang="<%= I18n.locale %>"> <![endif]-->
<!--[if gt IE 9]><!--><html lang="<%= I18n.locale %>"><!--<![endif]-->
  <head data-hook="inside_head">    
    <%= render partial: 'spree/shared/head' %>   
  </head>
  <body class="<%= body_class %>" id="<%= @body_id || 'default' %>" data-hook="body">
    <%= render partial: 'spree/shared/header' %>
    <div class="main"> <!-- class="container" -->
  		<section class="section bg-primary text-white">
  			<div class="container">
  				<h2><%= t("spree.contact_us") %></h2>
  				<div class="row">
  					<div class="col-lg-6">
              <%= render_snippet "/home-contact-us" %>
  						<!--/subsection-->
  					</div>
  					<!--/col-->                        
            <div class="col-lg-6">
              <div class="table-parent-md" style="height: 100%;">
                <div class="vertical-middle">
                  <div class="subsection">
                    <% @contact_us = Spree::Contact.new if @contact_us.nil? %>
                    <%= form_for @contact_us, html: { multipart: true } do |f| %>
                      <fieldset>
                        <div class="subsection-sm">
                          <%= f.select(:contact_us_email_id, Spree::ContactUsEmail.all.collect {|c| [ c.name, c.id ] }, {}, {class: "form-control"}) %>
                          <!-- options_from_collection_for_select(Spree:ContactUsEmail, "name", "email") %> -->
                        </div>
                  
                        <div class="row">
                          <div class="col-md-6">
                            <div class="subsection-sm">
                              <%= f.text_field :name, class: "form-control", placeholder: t("contact_us_form.name"), required: true %>
                              <%= display_error_message(f.object, 'name') %>
                            </div>
                          </div>
                          <!--/col-->
                          <div class="col-md-6">
                            <div class="subsection-sm">
                              <%= f.email_field :email, class: "form-control", placeholder: t("contact_us_form.email"), 'aria-describedby': "emailHelp", required: true %>
                              <%= display_error_message(f.object, 'email') %>
                            </div>
                          </div>
                          <!--/col-->
                        </div>
                        <!--/row-->
                        <div class="subsection-sm">
                          <%= f.text_field :subject, class: "form-control", placeholder: t("contact_us_form.subject"), required: true %>
                          <%= display_error_message(f.object, 'subject') %>
                        </div>
                        <div class="subsection-sm">                  
                          <%= f.text_area :message, class: "form-control", placeholder: t("contact_us_form.message"), required: true %>
                          <%= display_error_message(f.object, 'message') %>
                        </div>
          							<div class="subsection-sm">
          								<div class="form-group">
                            <%#= f.label :file, t("spree.contact_form.images.label") %>                            
                            <div class="custom-file">
                              <!-- <input type="file" class="custom-file-input" id="customFile"> -->
                              <%= f.file_field :file, class: "custom-file-input", lang: "#{I18n.locale}"%>
                              <%#= f.file_field :file, class: "form-control-file" %>
                              <label class="custom-file-label" for="customFile"><%= t("spree.contact_form.images.label") %></label>
                            </div>
                            <small class="form-text text-muted">
                              <%= t("spree.contact_form.images.placeholder") %>
                            </small>                              
          								</div>
          							</div>                        
                        <div class="text-right">
                          <%= f.submit t("spree.send_msg"), class: "btn btn-info" %>
                        </div>
                      </fieldset>
                    <% end %>
                  </div>
                  <!--/subsection-->
                </div>
              </div>
            </div>            
  					<!--/col-->
  				</div>
  				<!--/row-->
  			</div>
  			<!--/container-->
  		</section>
  		<!--/section-->
      <section class="section bg-blue-light">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">              
              <div class="subsection">
                <h2 class="text-primary"><%= t("spree.contact.office_hong_kong") %></h2>
              </div>
            </div>
          </div>
        </div>
      </section>
      
  		<section class="map-section">
  			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5893.742302827572!2d114.21126000448042!3d22.31644198349825!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3404013624b0b1d1%3A0x9e7842ffbf794210!2zVW5pZnkgQ29tbWVyY2lhbCBJbmR1c3RyaWFsIEJ1aWxkaW5nLCAzMSBUYWkgWWlwIFN0LCDQk9C-0L3QutC-0L3Qsw!5e0!3m2!1suk!2sua!4v1524213217005"
  			max-width="100%" width="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
  		</section>

      <section class="section bg-blue-light">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">              
              <div class="subsection">
                <h2 class="text-primary"><%= t("spree.contact.office_uk") %></h2>
              </div>
            </div>
          </div>
        </div>
      </section>

  		<section class="map-section">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2445.0449891632834!2d0.1331594819439974!3d52.20622991986696!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8708e1bdf1797%3A0x3eff503256fdaa0c!2s13-14+Burleigh+St%2C+Cambridge+CB1+1DG%2C+UK!5e0!3m2!1sen!2shk!4v1551671788999" max-width="100%" width="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
  		</section>

    </div>
    <%= render partial: 'spree/shared/footer' %>
    <script type="text/javascript">
      $('.custom-file input').change(function (e) {
        $(this).next('.custom-file-label').html(e.target.files[0].name);
      });
    </script>
      
    <%= render partial: "spree/shared/cookie" %>
  </body>
</html>
