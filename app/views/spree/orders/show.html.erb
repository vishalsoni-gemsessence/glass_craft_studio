<section class="section table-section">
  <div class="container">
    <div id="checkout" data-hook>
      <div data-hook="checkout_header">
        <h1 class="columns three alpha" data-hook="checkout_title"><%#= t('spree.checkout') %></h1>
        <div class="columns thirteen omega" data-hook="checkout_progress">
          <div class="subsection">
            <%= checkout_progress %>
          </div>
        </div>
      </div>

      <div class="row" data-hook="checkout_content">
        <div class="columns <%= if @order.state != 'confirm' then 'alpha twelve billing-form' else 'alpha omega sixteen' end %>" data-hook="checkout_form_wrapper">
          <div class="subsection">
            <fieldset id="order_details" data-hook>
              <div class="clear"></div>
              <legend align="center">
                <i class="fa fa-check-circle mr-2 fa-3x text-primary"></i>
                <h3 class="fw900"><%= t('order.order_number') %>: <%= @order.number %></h3>
              </legend>
              <%= render partial: 'spree/shared/order_details', locals: { order: @order } %>
            </fieldset>

            <br/>

            <div class="links alpha omega" data-hook="cart_buttons">
              <div class="row">
                <div class="col-lg-12">
                 <div id="empty-cart" data-hook style="margin: 0px;  ">
                  <i class="fa fa-angle-left mr-2" aria-hidden="true"></i>
                    <%= link_to t('spree.continue_shopping'), spree.root_path, class: 'continue button gray btn-empty-cart ' %>
                  </div>
                </div>
              </div>
            </div>            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
