<section class="section section-photo-gallery">
  <div class="container-fluid">
    <div class="subsection">
      <h2 class="text-primary text-uppercase text-center"><%= strip_tags @taxon.name %></h2>
    </div>
    <div class="photo-gallery-box" id="JustifiedGallery">   
      <%= render partial: 'spree/shared/gallery_product' %>
    </div>
    <div class="load-more-container">
      <% if @taxon_products.next_page %>
        <%= link_to 'Load More', nested_taxons_path(page: @taxon_products.next_page), class: 'btn btn-primary', id: 'loadMore' %>
      <% end %>
    </div>
  </div>
</section>

<div class="uploaded-product-variant"></div>