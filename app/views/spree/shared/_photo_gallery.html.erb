<section class="section section-photo-gallery">
  <div class="container-fluid">
    <div class="subsection">
      <h2 class="text-primary text-uppercase text-center"><%= strip_tags @taxon.name %></h2>
      <h4 class="fw400 text-center"><%= raw @taxon.description %></h4>
    </div>
    <%= render partial: 'spree/shared/search_in_gallery' %>
    <div class="photo-gallery-box" id="JustifiedGallery">   
      <%= render partial: 'spree/shared/gallery_product' %>
    </div>
    <br>
    <div class="load-more-container text-center">
      <% if @taxon_products.next_page %>
        <%= link_to t('spree.load_more'), nested_taxons_path(page: @taxon_products.next_page), class: 'btn btn-primary', id: 'loadMore' %>
      <% end %>
    </div>
  </div>
</section>

<div class="uploaded-product-variant"></div>