<div class="gift-card">
  <div class="taxon" data-hook="taxon">
    <div class="gift-card-img">      
      <%= image_tag taxon.icon(:original), class: 'product-img', alt: "" %>
    </div>
    <ul class="gift-card-link">
      <li>
        <%= link_to seo_url(taxon) do %>
          <i class="fa fa-link" aria-hidden="true"></i>
        <% end %>
      </li>
    </ul>
  <%= link_to seo_url(taxon) do %>    
    <div class="gift-card-blink"></div>
  <% end %>  
    <div class="gift-card-text">
      <h4 class="gift-card-title subtaxon-title">
        <%= link_to simple_format(taxon.name), seo_url(taxon), class: 'breadcrumbs' %>
      </h4>
    </div>
  </div>
</div>
