# Using mariaDB

default: &default
  adapter: mysql2
  encoding: utf8
  pool: 5
  min_messages: warning
  timeout: 5000
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *default
  database: database_name_dev
  username: username
  password: password

test:
  <<: *default
  database: database_name_test
  username: username
  password: password

production:
  <<: *default
  database: database_name
  username: <%= ENV["DB_USERNAME"] %>
  password: <%= ENV["DB_PASSWORD"] %>
